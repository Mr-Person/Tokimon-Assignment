<p id="notice"><%= notice %></p>

<h1>Listing Tokimons</h1>

<table id="tokimons">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Weight</th>
      <th>Height</th>
      <th>Fly</th>
      <th>Fight</th>
      <th>Fire</th>
      <th>Water</th>
      <th>Electric</th>
      <th>Ice</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tokimons.each do |tokimon| %>
      <%fy = tokimon.fly%><%ft = tokimon.fight%><%fr = tokimon.fire%>
      <%wt = tokimon.water%><%el = tokimon.electric%><%ic = tokimon.ice%>
      <tr>
        <td class='borderedTD'><%= tokimon.name %></td>
        <td class='borderedTD'><%= tokimon.description %></td>
        <td ><%= tokimon.weight %></td>
        <td><%= tokimon.height %></td>
        <td style="background-color:rgb(<%=fy+110%>,<%=fy+110%>,<%=fy*3+110%>)"><%=fy%></td>
        <td style="background-color:rgb(<%=ft*2+130%>,<%=ft+130%>,<%=ft+130%>)"><%=ft%></td>
        <td style="background-color:rgb(<%=fr*2+100%>,<%=fr+130%>,<%=fr+100%>)"><%=fr%></td>
        <td style="background-color:rgb(<%=wt+100%>,<%=wt+100%>,<%=wt*2+130%>)"><%=wt%></td>
        <td style="background-color:rgb(<%=el*2+130%>,<%=el*2+130%>,<%=el+130%>)"><%=el%></td>
        <td style="background-color:rgb(<%=ic+140%>,<%=ic+140%>,<%=ic*2+160%>)"><%=ic%></td>
        <td style="background-color:rgb(<%=ft+fr+50%>,<%=fy+el+50%>,<%=wt+ic+50%>);font-weight:bold"><%= tokimon.total %></td>
        <td><%= link_to 'Show', tokimon %></td>
        <td><%= link_to 'Edit', edit_tokimon_path(tokimon) %></td>
        <td><%= link_to 'Delete', tokimon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

